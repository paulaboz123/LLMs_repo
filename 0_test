import json
import logging
import os
import re
from typing import Any, Dict, List, Tuple

import pandas as pd

try:
    from openai import AzureOpenAI
except Exception:
    AzureOpenAI = None

logging.basicConfig(level=logging.INFO)
logger = logging.getLogger("score")

USE_MOCK = os.getenv("USE_MOCK", "1").strip() == "1"

client = None
CHAT_DEPLOYMENT = None

DEMANDS: List[Dict[str, str]] = []         # [{id, demand, description}]
DEMAND_TOKENS: List[Tuple[str, set]] = []  # [(demand_id, tokenset)]


def _json_load_maybe(x: Any) -> Any:
    if isinstance(x, (bytes, bytearray)):
        x = x.decode("utf-8", errors="replace")
    if isinstance(x, str):
        s = x.strip()
        if not s:
            return None
        try:
            return json.loads(s)
        except Exception:
            return x
    return x

def _find_content_byid(document: Dict[str, Any]) -> Dict[str, Any]:
    cd = document.get("contentDomain", {})
    by_id = cd.get("byId", {})
    return by_id if isinstance(by_id, dict) else {}

def _load_demands_xlsx() -> List[Dict[str, str]]:
    here = os.path.dirname(os.path.abspath(__file__))
    candidates = [
        os.path.join(here, "demands.xlsx"),
        os.path.join(here, "assets", "demands.xlsx"),
    ]
    model_dir = os.getenv("AZUREML_MODEL_DIR")
    if model_dir:
        candidates += [
            os.path.join(model_dir, "demands.xlsx"),
            os.path.join(model_dir, "assets", "demands.xlsx"),
        ]

    for p in candidates:
        if os.path.exists(p):
            df = pd.read_excel(p)
            df.columns = [c.strip().lower() for c in df.columns]
            required = {"demand_id", "demand", "description"}
            missing = required - set(df.columns)
            if missing:
                raise RuntimeError(f"demands.xlsx missing columns: {sorted(list(missing))}. Found: {list(df.columns)}")

            out = []
            for _, r in df.iterrows():
                did = str(r["demand_id"]).strip()
                if not did or did.lower() == "nan":
                    continue
                out.append({
                    "id": did,
                    "demand": str(r["demand"]).strip(),
                    "description": str(r["description"]).strip(),
                })
            logger.info("Loaded %d demands from %s", len(out), p)
            return out

    raise RuntimeError(f"demands.xlsx not found. Tried: {candidates}")

def _tokenize(s: str) -> set:
    s = (s or "").lower()
    s = re.sub(r"[^a-z0-9ąćęłńóśźż]+", " ", s)
    toks = [t for t in s.split() if len(t) >= 3]
    return set(toks)

def _build_demand_tokens():
    global DEMAND_TOKENS
    DEMAND_TOKENS = []
    for d in DEMANDS:
        toks = _tokenize(d["demand"] + " " + d["description"])
        DEMAND_TOKENS.append((d["id"], toks))

def _mock_predict(text: str, top_k: int) -> Tuple[float, List[Dict[str, Any]]]:
    """
    Keyword/token overlap against EACH demand's (demand+description) tokens.
    Returns label=demand_id.
    """
    t = (text or "").strip()
    if len(t) < 4:
        return 0.0, []

    text_tokens = _tokenize(t)
    if not text_tokens:
        return 0.0, []

    scored = []
    for did, dtoks in DEMAND_TOKENS:
        if not dtoks:
            continue
        overlap = len(text_tokens & dtoks)
        if overlap <= 0:
            continue

        # prosta funkcja "prawdopodobieństwa" z overlapu (tuning później)
        # 1 token -> ~0.60, 2 -> ~0.72, 3 -> ~0.80, 4 -> ~0.86 ...
        proba = 1.0 - (0.4 ** overlap)
        proba = max(0.0, min(0.99, float(proba)))
        scored.append((did, proba))

    if not scored:
        return 0.10, []

    scored.sort(key=lambda x: x[1], reverse=True)
    preds = [{"label": did, "proba": float(round(p, 4))} for did, p in scored[:max(1, int(top_k))]]

    relevance = float(round(max(p for _, p in scored), 4))
    return relevance, preds

def _aoai_predict(text: str, top_k: int) -> Tuple[float, List[Dict[str, Any]]]:
    t = (text or "").strip()
    if len(t) < 4:
        return 0.0, []

    # katalog: ID + demand + skrót opisu
    lines = []
    for d in DEMANDS:
        desc = d["description"] or ""
        if len(desc) > 180:
            desc = desc[:180] + "…"
        lines.append(f'{d["id"]}: {d["demand"]} | {desc}')
    catalog = "\n".join(lines)

    system = "Return STRICT JSON only. No prose."
    user = f"""
TEXT:
{t}

DEMANDS (id: demand | description):
{catalog}

Return JSON ONLY:
{{
  "relevantProba": 0.0,
  "predictions": [{{"id":"<demand_id>", "probability":0.0}}]
}}

Rules:
- relevantProba: 0..1
- If relevantProba < 0.5 => predictions must be []
- Otherwise return up to {top_k} predictions sorted by probability desc
- prediction.id MUST be one of DEMANDS ids
""".strip()

    resp = client.chat.completions.create(
        model=CHAT_DEPLOYMENT,
        messages=[{"role": "system", "content": system},
                  {"role": "user", "content": user}],
    )

    raw = (resp.choices[0].message.content or "").strip()
    try:
        data = json.loads(raw)
    except Exception:
        logger.warning("AOAI returned non-JSON (truncated): %r", raw[:500])
        return 0.0, []

    rel = float(data.get("relevantProba", 0.0) or 0.0)
    raw_preds = data.get("predictions", []) or []

    allowed = {d["id"] for d in DEMANDS}
    preds = []
    if rel >= 0.5:
        for p in raw_preds[:max(1, int(top_k))]:
            did = str(p.get("id", "")).strip()
            try:
                prob = float(p.get("probability"))
            except Exception:
                continue
            if did in allowed:
                preds.append({"label": did, "proba": max(0.0, min(1.0, prob))})

    preds.sort(key=lambda x: x["proba"], reverse=True)
    rel = max(0.0, min(1.0, rel))
    return rel, preds

def _predict(text: str, top_k: int) -> Tuple[float, List[Dict[str, Any]]]:
    if USE_MOCK:
        return _mock_predict(text, top_k)
    return _aoai_predict(text, top_k)

def _document_level_aggregate(best_by_id: Dict[str, float], top_k: int) -> List[Dict[str, Any]]:
    items = [{"id": k, "probability": float(v)} for k, v in best_by_id.items()]
    items.sort(key=lambda x: x["probability"], reverse=True)
    return items[:max(1, int(top_k))] if items else []


# ===== AML entrypoints =====
def init():
    global client, CHAT_DEPLOYMENT, DEMANDS, USE_MOCK

    USE_MOCK = os.getenv("USE_MOCK", "1").strip() == "1"
    DEMANDS = _load_demands_xlsx()
    _build_demand_tokens()

    logger.info("init(): USE_MOCK=%s, demands=%d", USE_MOCK, len(DEMANDS))

    if not USE_MOCK:
        if AzureOpenAI is None:
            raise RuntimeError("openai package not available but USE_MOCK=0")

        aoai_endpoint = os.getenv("AZURE_OPENAI_ENDPOINT", "").strip()
        aoai_key = os.getenv("AZURE_OPENAI_API_KEY", "").strip()
        aoai_version = os.getenv("AZURE_OPENAI_API_VERSION", "").strip()

        # wspieramy dwie nazwy klucza (bo miałaś rozjazdy)
        CHAT_DEPLOYMENT = (
            os.getenv("AZURE_OPENAI_CHAT_DEPLOYMENT", "").strip()
            or os.getenv("CHAT_DEPLOYMENT", "").strip()
        )

        if not (aoai_endpoint and aoai_key and aoai_version and CHAT_DEPLOYMENT):
            raise RuntimeError(
                "Missing AOAI env vars. Need: AZURE_OPENAI_ENDPOINT, AZURE_OPENAI_API_KEY, "
                "AZURE_OPENAI_API_VERSION, AZURE_OPENAI_CHAT_DEPLOYMENT (or CHAT_DEPLOYMENT)"
            )

        client = AzureOpenAI(
            azure_endpoint=aoai_endpoint,
            api_key=aoai_key,
            api_version=aoai_version,
        )

def run(raw_data):
    """
    Wejście z apki:
      { "document": <obj lub json-string>, "model": "...", "num_preds": 3 }

    Wyjście dla apki:
      { "predictions": <document> }
    gdzie document zawiera:
      documentDemandPredictions: [{id, probability}, ...]
      + per content: relevantProba, cdTransformerPredictions, cdLogregPredictions
    """
    try:
        req = _json_load_maybe(raw_data)
        if not isinstance(req, dict):
            return {"error": "Bad request: body must be JSON object"}

        if "document" not in req:
            return {"error": "Bad request: missing 'document'"}

        document = _json_load_maybe(req["document"])
        if not isinstance(document, dict):
            return {"error": "Bad request: 'document' must be JSON object"}

        num_preds = int(req.get("num_preds", 3))

        by_id = _find_content_byid(document)
        best_doc_probs: Dict[str, float] = {}

        for _, content in by_id.items():
            if not isinstance(content, dict):
                continue

            text = content.get("text", "")
            rel, preds = _predict(text, top_k=num_preds)

            content["relevantProba"] = float(rel)
            content["cdLogregPredictions"] = []          # placeholder
            content["cdTransformerPredictions"] = preds  # [{label:<demand_id>, proba:<float>}]

            for p in preds:
                did = p["label"]
                prob = float(p["proba"])
                if did not in best_doc_probs or prob > best_doc_probs[did]:
                    best_doc_probs[did] = prob

        document["documentDemandPredictions"] = _document_level_aggregate(best_doc_probs, top_k=num_preds)
        return {"predictions": document}

    except Exception as e:
        logger.exception("run() failed")
        return {"error": str(e)}
